{{extend 'layout.html'}}
<h2>
    Current Recipes
</h2>
<body style="background-color:#f1f1c1;">
     <form action="http://127.0.0.1:8000/assgn_ans/appadmin/insert/db/image">
         <button class="button1">UPLOAD RECIPE</button>
</form> 
 <form action="http://127.0.0.1:8000/assgn_ans/default/myrecipe">
         <button class="button2">MY RECIPES</button>
</form> 
<style>
.button1 {
    background-color:lightblue; 
    border: 1px solid green;
    color: white;
    padding: 5px 10px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    cursor: pointer;
    float: left;
}
.ab{
    color:black;
    font-size:20px;
    float:left;
}
    .abc{
    color:black;
    font-size:20px;
    float:right;
}

.button1:hover {
    background-color:grey;
}
    .button2 {
    background-color:lightblue; 
    border: 1px solid green;
    color: white;
    padding: 5px 10px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    cursor: pointer;
    float: right;
}

.button2:hover {
    background-color:grey;
}
  h2 {
      color:brown;
      text-align:center;
  }  
th {
    padding: 5px;
    text-align:center;
    font-size:25px;
    color:red
}
    td {
    padding: 5px;
    text-align:center;
    font-size:25px;
    color:green
}
    table {
    background-color: white;
}
</style>
    <table border="2" style="width:100%">
        <tr>
    <th>Title</th>
    <th>Image</th>
    <th>Description</th>
  </tr>
{{for image in rows:}}
        <tr>
         
     
        <td rowspan='2'>
         <img width="100px"
             src="{{=URL('download', args=image.file)}}" />
        </td>
        <tr> <td >{{=(A(image.title, _href=URL("show", args=image.id)))}}</td></tr>
        <tr><td>{{=image.body}}</td></tr>
    {{pass}}
        
    </table>
    <div class="ab">
        
    
    {{if page>0:}}
    
        
        {{=A('PREVIOUS',_href=URL(args=(page-1)))}}
    </div>
        {{pass}}
    <div class="abc">
    {{if len(rows)>=3:}}
    
        {{=A('NEXT',_href=URL(args=(page+1)))}}
    {{pass}}
    </div>
</body>
